<Application x:Class="Noise.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Noise"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Resources\lang.xaml"/>

                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryAppColor" Color="#141414"/>

                    <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="SecondaryTextColor" Color="#909090"/>
                </ResourceDictionary>

                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/MenuStyles.xaml"/>
                <ResourceDictionary Source="/Styles/DataGridStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
