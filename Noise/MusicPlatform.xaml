<Window x:Class="Noise.MusicPlatform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noise"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Title="MusicPlatform" 
        MinHeight="600" 
        MinWidth="1000" 
        Width="1000" 
        Height="600" 
        MouseLeftButtonDown="dragAWindow"
        SizeChanged="Window_SizeChanged"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="25" 
            VerticalAlignment="Stretch" 
            Background="#141414"
            x:Name="windowBorder">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Button Click="Close_Click" 
                        Style="{StaticResource closeButton}"
                        Padding="10 10 40 10"
                        HorizontalAlignment="Center"
                        x:Name="closeButton">
                    <Image 
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="./Assets/close.png"
                        Width="24"
                        Height="24"
                        />
                </Button>
            </StackPanel>

            <StackPanel Grid.Row="1" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Right"
                        Grid.Column="2" Grid.RowSpan="2">
                <Border 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    CornerRadius="10"
                    Margin="20"
                    Padding="40 9">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Left">
                        <Border Width="50" 
                            Height="50" 
                            CornerRadius="15">
                            <Border.Background>
                                <ImageBrush Stretch="Fill" ImageSource="./Assets/testAvatar.jpg"/>
                            </Border.Background>
                        </Border>

                        <Label
                            FontFamily="Segoe UI" FontSize="16px" 
                            Foreground="White" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            x:Name="profileName">USERNAME</Label>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Border ClipToBounds="True" 
                        Background="#202020" 
                        Grid.Row="2" Grid.ColumnSpan="3"
                    x:Name="songPlayer"
                    CornerRadius="0 0 25 25">
                
            </Border>
        </Grid>
    </Border>
</Window>
